{
  "bsonType": "object",
  "description": "供应商表 - 供应商信息管理",
  "required": ["name", "code"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "供应商ID，系统自动生成"
    },
    "code": {
      "bsonType": "string",
      "description": "供应商编码，唯一标识",
      "title": "供应商编码",
      "trim": "both"
    },
    "name": {
      "bsonType": "string",
      "description": "供应商名称",
      "title": "供应商名称",
      "trim": "both"
    },
    "short_name": {
      "bsonType": "string",
      "description": "供应商简称",
      "title": "简称"
    },
    "contact": {
      "bsonType": "string",
      "description": "联系人",
      "title": "联系人"
    },
    "phone": {
      "bsonType": "string",
      "description": "联系电话",
      "title": "电话"
    },
    "email": {
      "bsonType": "string",
      "description": "电子邮箱",
      "title": "邮箱"
    },
    "address": {
      "bsonType": "string",
      "description": "详细地址",
      "title": "地址"
    },
    "bank_name": {
      "bsonType": "string",
      "description": "开户银行",
      "title": "开户银行"
    },
    "bank_account": {
      "bsonType": "string",
      "description": "银行账号",
      "title": "银行账号"
    },
    "tax_number": {
      "bsonType": "string",
      "description": "税号",
      "title": "税号"
    },
    "credit_level": {
      "bsonType": "string",
      "description": "信用等级",
      "title": "信用等级",
      "enum": ["A", "B", "C", "D"]
    },
    "payment_terms": {
      "bsonType": "string",
      "description": "付款条件",
      "title": "付款条件"
    },
    "description": {
      "bsonType": "string",
      "description": "备注说明",
      "title": "备注"
    },
    "status": {
      "bsonType": "string",
      "description": "状态：active-启用，inactive-停用",
      "title": "状态",
      "enum": ["active", "inactive"],
      "defaultValue": "active"
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "title": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
    "update_time": {
      "bsonType": "timestamp",
      "description": "更新时间",
      "title": "更新时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}
